{
    "name": "backdoors-dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-toolsai.jupyter",
                "openai.chatgpt",
                "hediet.vscode-drawio"
            ]
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt",
    "remoteUser": "vscode"
}